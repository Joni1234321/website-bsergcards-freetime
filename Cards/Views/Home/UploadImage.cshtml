@model ImageReference
@{

    ViewData["Title"] = "ImgView";
}

<h1>ImgView</h1>

<h2>Image path was: @ViewBag.fileName </h2>
<form asp-action="PostUploadImage" enctype="multipart/form-data">
    Select image to upload:
    <input type="file" asp-for="IFormFile">
    <input type="submit" value="Upload Image">
</form>